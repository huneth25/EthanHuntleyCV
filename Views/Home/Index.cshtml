                <ul>
                    <li>Cleaned dog kennels</li>
                    <li>Refilled water and food bowls</li>
                </ul>
            </div>

            <div class="experience-item">
                <div class="experience-header">
                    <h3>Teacher Assistant</h3>
                    <p class="date">2018 - 2020</p>
                </div>
                <p class="company">EduLift SA, Johannesburg</p>
                <ul>
                    <li>Assisted with teaching underprivileged school kids</li>
                    <li>Made sandwiches for them during lunch break</li>
                </ul>
            </div>
        </section>

        <!-- Education Section -->
        <section class="content-section">
            <h2 class="section-title">Education and Qualifications</h2>

            <div class="education-item">
                <div class="education-header">
                    <h3>Bachelor Computer Science in Application Development</h3>
                    <p class="date">Jan 2023 - Present</p>
                </div>
                <p class="institution">Varsity College, Johannesburg</p>
            </div>

            <div class="education-item">
                <div class="education-header">
                    <h3>Private Pilot's License</h3>
                    <p class="date">2023 - 2024</p>
                </div>
                <p class="institution">Skyhawk Aviation, Johannesburg</p>
            </div>

            <div class="education-item">
                <div class="education-header">
                    <h3>BEng Mechanical Engineering</h3>
                    <p class="date">2022 - 2023</p>
                </div>
                <p class="institution">University of Pretoria, Johannesburg</p>
            </div>

            <div class="education-item">
                <div class="education-header">
                    <h3>High School Diploma</h3>
                    <p class="date">2016 - 2020</p>
                </div>
                <p class="institution">Crawford College Lonehill, Johannesburg</p>
            </div>
        </section>

        <!-- Courses Section -->
        <section class="content-section">
            <h2 class="section-title">Courses</h2>

            <div class="courses-grid">
                <div class="course-item">
                    <p class="course-name">Introduction to GitHub</p>
                    <p class="course-provider">Online Course - MicrosoftLearn, 2024</p>
                </div>

                <div class="course-item">
                    <p class="course-name">Introduction to JUnit</p>
                    <p class="course-provider">Online Course - GreatLearning, 2024</p>
                </div>

                <div class="course-item">
                    <p class="course-name">Android Application Development</p>
                    <p class="course-provider">Online Course - GreatLearning, 2024</p>
                </div>

                <div class="course-item">
                    <p class="course-name">Kotlin Fundamentals</p>
                    <p class="course-provider">Online Course - Google for Developers, 2024</p>
                </div>

                <div class="course-item">
                    <p class="course-name">Advanced Programming in Kotlin</p>
                    <p class="course-provider">Online Course - Coursera, 2024</p>
                </div>

                <div class="course-item">
                    <p class="course-name">AWS Mobile App Development</p>
                    <p class="course-provider">Online Course - GreatLearning, 2024</p>
                </div>

                <div class="course-item">
                    <p class="course-name">Create a Web UI with ASP.NET Core</p>
                    <p class="course-provider">Online Course - MicrosoftLearn, 2024</p>
                </div>

                <div class="course-item">
                    <p class="course-name">Microsoft Excel and Macros</p>
                    <p class="course-provider">Online Course - Coursera, 2024</p>
                </div>

                <div class="course-item">
                    <p class="course-name">UI/UX for Beginners</p>
                    <p class="course-provider">Online Course - GreatLearning, 2024</p>
                </div>
            </div>
        </section>

        <!-- References Section -->
        <section class="content-section">
            <h2 class="section-title">References</h2>
            <p>Available upon request.</p>
        </section>

        <!-- Contact Form Section -->
        <section class="content-section">
            <h2 class="section-title">Contact Me</h2>

            @if (TempData["SuccessMessage"] != null)
            {
                <div class="alert alert-success">
                    @TempData["SuccessMessage"]
                </div>
            }

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["ErrorMessage"]
                </div>
            }

            <form class="contact-form" asp-controller="Home" asp-action="Contact" method="post">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input type="text" id="Name" name="Name" required />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Email">Email</label>
                    <input type="email" id="Email" name="Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Subject">Subject</label>
                    <input type="text" id="Subject" name="Subject" required />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label for="Message">Message</label>
                    <textarea id="Message" name="Message" rows="5" required></textarea>
                    <span asp-validation-for="Message" class="text-danger"></span>
                </div>

                <button type="submit" class="submit-button">
                    <i class="bi bi-send"></i> Send Message
                </button>
            </form>
        </section>
        <!-- Footer -->
        <footer class="footer">
            <p>© 2025 Ethan Huntley. All rights reserved.</p>
        </footer>
    </main>
</div>